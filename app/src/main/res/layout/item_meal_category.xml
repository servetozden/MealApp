<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/constraintLayoutBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewRateLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/lunch"/>

    <TextView
        android:id="@+id/textViewMealName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pasta "
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/imageViewRateLogo"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewRateLogo"
        app:layout_constraintLeft_toRightOf="@+id/imageViewRateLogo"
        android:layout_marginLeft="20dp"/>


    <TextView
        android:id="@+id/textViewMealDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textViewMealName"
        app:layout_constraintLeft_toRightOf="@+id/imageViewRateLogo"
        android:layout_marginLeft="20dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
