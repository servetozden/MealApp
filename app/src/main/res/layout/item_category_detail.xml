<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:id="@+id/constraintLayoutBackground"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageViewMealLogo"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/lunch"/>

    <TextView
        android:id="@+id/textViewMealCategoryDetailName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pasta "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textAlignment="textStart"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewMealLogo"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMealLogo"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textViewMealCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/success_color"
        android:textStyle="bold"
        tools:text="country"
        app:layout_constraintTop_toBottomOf="@+id/textViewMealCategoryDetailName"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMealLogo"
        android:layout_marginLeft="20dp"/>



    <TextView
        android:id="@+id/textViewMealCategoryDetailDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Description"
        app:layout_constraintTop_toBottomOf="@+id/textViewMealCountry"
        app:layout_constraintLeft_toRightOf="@+id/imageViewMealLogo"
        android:layout_marginLeft="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>
